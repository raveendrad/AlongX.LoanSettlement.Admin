
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/highcharts-3d.js"></script>
<script src="https://code.highcharts.com/modules/cylinder.js"></script>
<script src="https://code.highcharts.com/modules/funnel3d.js"></script>
<script src="https://code.highcharts.com/modules/pyramid3d.js"></script>
<script src="https://code.highcharts.com/modules/item-series.js"></script>
<script src="https://code.highcharts.com/modules/data.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<script src="~/assets/site_js/reports/dashboard.js"></script>

<style type="text/css">
    body {
        background-color: #fbfbfb !important;
    }

    .sales_summary_dashboard .card {
        background-color: #fff !important;
    }

    #companyInfoTable p {
        margin-bottom: 0.5rem;
    }

    #companyInfoTable tr td:first-child {
        font-weight: bold;
    }
</style>
<!-- breadcrumb -->
<div class="breadcrumb-header justify-content-between">
    <div>
        <div class="col-lg-12 col-md-12" style="">
            <img style="float:left; width:20%; " src="@Request.Cookies["AlongXLoanProperty"]["logo_url"].ToString()" />
            <h4 style="text-align:left;float:left; padding-top:25px; padding-left:10px;">@Request.Cookies["AlongXLoanProperty"]["business_name"].ToString()</h4>
        </div>
    </div>
    <div class="d-flex align-items-end flex-wrap my-auto right-content breadcrumb-right">
        <p id="applied_filter_range_shower" style="margin-bottom: 0.2rem !important; padding-right:10px;"></p>
    </div>
</div>

<div class="row" style="margin-top:20px;">
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
        <div style="background-image: url('/assets/billzen_images/dashboard_banner.jpg'); background-size: contain; background-size: cover; background-size: 100%; padding: 20px; ">
            <h6>Hi <b>@Request.Cookies["AlongXLoanProperty"]["full_name"].ToString(),</b></h6>
            @{
                if (DateTime.Now.Hour < 12)
                {
                    <h6>Good Morning !! <img src="~/assets/billzen_images/good_morning.png" style="width:30px;" /></h6>
                }
                else if (DateTime.Now.Hour < 17)
                {
                    <h6>Good Afternoon !! <img src="~/assets/billzen_images/good_evening.png" style="width:30px;" /></h6>
                }
                else
                {
                    <h6>Good Evening !! <img src="~/assets/billzen_images/good_afternoon.png" style="width:30px;" /></h6>
                }
            }
            <h6>Welcome to the management console of <i>@Request.Cookies["AlongXLoanProperty"]["app_name"].ToString() . Please contact our 24x7 Support in case you need any assistance on any of the operations. </i></h6>
            <h6><span class="fa fa-phone"></span> - <span id="help_contact_number">@Request.Cookies["AlongXLoanProperty"]["help_contact_number"].ToString()</span></h6><br />
            <p style="font-size: 13px; font-weight: bold; border-left: 5px solid #08c18d; padding-left: 5px; color: #08c18d ">Company Information</p>
            <table id="companyInfoTable">
                <tr>
                    <td><p>Business Name</p></td>
                    <td><p>:</p></td>
                    <td><p id="business_name"></p></td>
                </tr>
                <tr>
                    <td><p>Org Type</p></td>
                    <td><p>:</p></td>
                    <td><p id="OrgType"></p></td>
                </tr>
                <tr>
                    <td><p>Email</p></td>
                    <td><p>:</p></td>
                    <td><p id="EmailAddress"></p></td>
                </tr>
                <tr>
                    <td><p>Location</p></td>
                    <td><p>:</p></td>
                    <td><p id="Location"></p></td>
                </tr>
                <tr>
                    <td><p>Contact Name</p></td>
                    <td><p>:</p></td>
                    <td><p id="ContactName"></p></td>
                </tr>
                <tr>
                    <td><p>Phone Number</p></td>
                    <td><p>:</p></td>
                    <td><p id="PhoneNumber"></p></td>
                </tr>
                <tr>
                    <td><p>Open Time</p></td>
                    <td><p>:</p></td>
                    <td><p id="OpenTime"></p></td>
                </tr>
                <tr>
                    <td><p>Close Time</p></td>
                    <td><p>:</p></td>
                    <td><p id="CloseTime"></p></td>
                </tr>
            </table>
        </div>

    </div>

</div>

